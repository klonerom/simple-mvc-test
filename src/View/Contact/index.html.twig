{% extends 'layout.html.twig' %}
{% block title %}Liste des contacts | simple-mvc-test{% endblock %}
{% block content %}
    <h1><i class="fas fa-users"></i> Liste des contacts</h1>

    {% if message %}
        <p>{{ message }}</p>
    {% endif %}

    <div class="ml-2 my-3">
        <a href="/contact/add" class="btn btn-outline-success btn-sm"><i class="fas fa-plus"></i> Nouveau contact</a>
    </div>
    <div class="ml-2">
        <table class="table table-striped .table-responsive text-center">
            <thead>
            <tr>
                <th>id</th>
                <th>Civilité</th>
                <th>NOM Prénom</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
                {% for contact in contacts %}
                <tr>
                    <td>{{ contact.id }}</td>
                    <td>{{ contact.civility }}</td>
                    <td>{{ contact.lastname|upper }} {{ contact.firstname|capitalize }}</td>
                    <td><ul style="list-style: none;display: inline-flex;">
                            <li style="margin-right: 10px;"><a href="/contact/{{ contact.id }}" class="btn btn-outline-info btn-sm"><i class="fas fa-eye"></i> Show</a></li>
                            <li style="margin-right: 10px;"><a href="/contact/edit/{{ contact.id }}" class="btn btn-outline-secondary btn-sm"><i class="far fa-edit"></i> Edit</a></li>
                            <li style="margin-right: 10px;">
                                <form action="/contact/delete/{{ contact.id }}" method="post">
                                    <button type="submit" class="btn btn-outline-danger btn-sm"><i class="far fa-trash-alt"></i> Delete</button>
                                </form>
                            </li>
                        </ul>
                    </td>
                {% else %}
                    <li>Nothing to display</li>
                {% endfor %}
                </tr>
            </tbody>
        </table>
    </div>
{% endblock %}
