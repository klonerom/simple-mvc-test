<div class="container">
    <form action="" method="post" novalidate>
        <div class="form-row">
            <div class="col-xs">
                <label for="lastname">Nom</label>
                <input type="text" name="lastname" class="form-control" id="lastname" placeholder="Saisissez le nom" value="{% if contact.lastname %}{{ contact.lastname }}{% endif %}" required> <p style="color: red;">{{ error.lastname }}</p>
            </div>
            <div class="col-xs">
                <label for="firstname">Prénom</label>
                <input type="text" name="firstname" class="form-control" id="firstname" placeholder="Saisissez le prénom"  value="{% if contact.firstname %}{{ contact.firstname }}{% endif %}" required> <p style="color: red;">{{ error.firstname }}</p>
            </div>
            <div class="col-xs">
                <label for="civility">Civility</label>
                <select class="form-control" name="civility" id="civility">
                    <option value="">Selectionnez...</option>
                    {% for civility in civilities %}
                        <option value="{{ civility.id }}" {% if civility.id == contact.civilityId %}selected{% endif %}>{{ civility.civility }}</option>
                    {% endfor %}
                </select>
                <p style="color: red;">{{ error.civility }}</p>
            </div>
        </div>
        <div class="form-row">
            <div class="col mt-3">
                <button type="submit" class="btn btn-outline-success"><i class="far fa-check-square"></i> Valider</button>
            </div>
        </div>
    </form>
</div>
