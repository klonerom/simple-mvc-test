<div class="container">
    <form action="" method="post">
        <div class="form-row">
            <div class="col-xs">
                <label for="lastname">Nom</label>
                <input type="text" name="lastname" class="form-control" id="lastname" placeholder="Saisissez le nom" value="{% if contact.lastname %}{{ contact.lastname }}{% endif %}">
            </div>
            <div class="col-xs">
                <label for="firstname">Prénom</label>
                <input type="text" name="firstname" class="form-control" id="firstname" placeholder="Saisissez le prénom"  value="{% if contact.firstname %}{{ contact.firstname }}{% endif %}">
            </div>
            <div class="col-xs">
                <label for="civility">Civility</label>
                <select class="form-control" name="civility" id="civility">
                    {% for civility in civilities %}
                        <option value="{{ civility.id }}" {% if civility.id == civilityContact.id %}selected{% endif %}>{{ civility.civility }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>
        <div class="form-row">
            <div class="col mt-3">
                <button type="submit" class="btn btn-outline-success"><i class="far fa-check-square"></i> Valider</button>
            </div>
        </div>
    </form>
</div>
