{% extends 'layout.html.twig' %}

{% block content %}
    <h1>Contacts</h1>
    <table class="table table-striped .table-responsive text-center">
        <thead>
        <tr>
            <th>id</th>
            <th>Civilité</th>
            <th>NOM Prénom</th>
            <th>Date de création</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <td>{{ contact.id }}</td>
            <td>{{ civilityId.civility }}</td>
            <td>{{ contact.lastname|upper }} {{ contact.firstname|capitalize }}</td>
            <td>{{ contact.createdAt|date('d/m/Y') }}</td>
            <td><ul style="list-style: none;display: inline-flex;">
                    <li style="margin-right: 10px;"><a href="/contact/edit/{{ contact.id }}" class="btn btn-outline-secondary btn-sm">Edit</a></li>
                    <li style="margin-right: 10px;"><a href="/contact/delete/{{ contact.id }}" class="btn btn-outline-danger btn-sm">Delete</a></li>
                </ul>
            </td>
        </tr>
        </tbody>
    </table>
    <a href="/" class="btn btn-info btn-sm">Back</a>
{% endblock %}
